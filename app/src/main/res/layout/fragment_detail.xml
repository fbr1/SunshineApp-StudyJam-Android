<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.android.sqsoft.sunshine.DetailFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fecha"
            android:id="@+id/tvDate"
            android:textStyle="italic"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/tvDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ivWeatherImage"
                android:src="@drawable/art_clear" />


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:layout_marginTop="43dp"
                android:id="@+id/lyClima"
                android:gravity="center|center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Soleado"
                    android:id="@+id/tvNombreClima"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Muy soleado"
                    android:id="@+id/tvDescripcionClima"
                    />
            </LinearLayout>
            <FrameLayout
                android:id="@+id/container_current_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </FrameLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/lyTemp"
                android:gravity="center|center_horizontal">>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="20째"
                    android:id="@+id/tvTmax"
                    android:textStyle="bold" />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="10째"
                        android:id="@+id/tvTmin"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Presi처n:"
                android:id="@+id/tvLabelPresion"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="1032 Pa"
                android:id="@+id/tvPresi처n"
                android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Humedad:"
                android:id="@+id/tvLabelHumedad"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="94%"
                android:id="@+id/tvHumedad"
                android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material" />
        </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nublado:"
            android:id="@+id/tvLabelNublado"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="84%"
            android:id="@+id/tvNublado"
            android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material" />
    </LinearLayout><LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Probabilidad de lluvia:"
            android:id="@+id/tvLabelLluvia"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="30%"
            android:id="@+id/tvLluvia"
            android:layout_marginLeft="@dimen/abc_action_bar_content_inset_material" />
    </LinearLayout>
    </LinearLayout>




        //Poner imagen Temperatura maxima y minima

</android.support.v7.widget.CardView>



